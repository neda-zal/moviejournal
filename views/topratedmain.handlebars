<div class="page-bg"></div>

  <div class="animation-wrapper">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
  </div>

  <nav class="navbar bg-dark border border-dark navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <form class="form-inline" name="buttons" method="post">
            <input class="form-control border border-dark text-center" style="width: 100px;"
                   name="button" type="button" value="Home" onclick="openPage('/')"/>
          </form>
        </div>
      </div>
    </nav>

  <div>
    <h1 class="align-middle neon" style="font-weight: bold; margin: 30px;">Top Rated Movies</h1>
  </div>

<div class="container">
  <table class="table" id="table">
    <thead>
      <tr>
        <th colspan="1">#</th>
        <th colspan="2">Image</th>
        <th colspan="2">Title</th>
        <th colspan="3">Description</th>
        <th colspan="2">Vote Average</th>
        <th colspan="2">Release Date</th>
      </tr>
    </thead>
    <tbody>

    {{#each data}}
      <tr>
        <th colspan="1" style="vertical-align:middle;">{{math @index "+" 1}}</th>
        <td colspan="2" valign="middle" style="padding: 0;"><img src='{{concat this.poster_path}}'/></td>
        <td colspan="2" style="vertical-align:middle;">{{this.title}}</td>
        <td colspan="3" style="vertical-align:middle;">{{this.overview}}</td>
        <td colspan="2" style="vertical-align:middle;">{{this.vote_average}}</td>
        <td colspan="2" style="vertical-align:middle;">{{this.release_date}}</td>
      </tr>
    {{/each}}

  </tbody>
</table>
</div>
